####################################################################################################
# Creating container PHP
####################################################################################################
php:
    build: ./image/php/
    ports:
        - "9000:9000"
    volumes:
        - ./www/lumen/:/var/www/html
    
####################################################################################################
# Creating container (Nginx)
####################################################################################################
nginx:
    image: nginx:latest
    ports:
        - 80:80
    volumes:
        - ./image/nginx/default.conf:/etc/nginx/conf.d/default.conf
    links:
        - php
